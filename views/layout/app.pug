doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title SunS37 5

        //- link(rel="stylesheet", href=Helper.mix("chunks/vendors.css"))
        link(rel="stylesheet", href=Helper.mix("chunks/bulma.css"))
        link(rel="stylesheet", href=Helper.mix("styles/layout/base.css"))
        block styles

        script(defer, async, src=Helper.mix("chunks/vendors.js")) 
        script(defer, async, src=Helper.mix("chunks/vue.js")) 
        block scripts
    body 
        #app
            nav.navbar(role='navigation' aria-label='main navigation')
                .navbar-brand
                    a.navbar-item(href=Helper.url("home.index"))
                        //- img(src='https://bulma.io/images/bulma-logo.png' width='112' height='28')
                        | SUNSET
                    a.navbar-burger(role='button' aria-label='menu' aria-expanded='false' data-target='mainNavbar')
                        span(aria-hidden='true')
                        span(aria-hidden='true')
                        span(aria-hidden='true')

                #mainNavbar.navbar-menu
                    .navbar-start
                        a(href=Helper.url("home.index")).navbar-item
                            | Home
                        .navbar-item.has-dropdown.is-hoverable
                            a.navbar-link
                                | More
                            .navbar-dropdown
                                a(href=Helper.url("home.about")).navbar-item
                                    | About
                                a(href=Helper.url("home.reposrt-issue")).navbar-item
                                    | Report an issue
                                hr.navbar-divider
                                a(href=Helper.url("home.private-page")).navbar-item
                                    | PRIVATE PAGE
                    .navbar-end
                        .navbar-item
                            .buttons
                                if (! user)
                                    a.button.is-primary(href=Helper.url("auth.login"))
                                        strong Login
                                else
                                    a.button.is-light(href=Helper.url("auth.logout"))
                                        | Log out

            block content